<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.everfox.aozoraforums.activities.ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#616161"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp"
        >
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_resetPassword_etEmail_Hint"
            android:background="@drawable/edittext_rounded_corners"
            android:padding="8dp"
            android:textColorHint="#878787"
            />


        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_rounded_corner"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="@string/activity_resetPassword_btnReset_Text"/>


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:text="If youâ€™re not sure you signed up with facebook try to log in with facebook"/>
    </LinearLayout>

</RelativeLayout>
